<drawer:RadSideDrawer
        xmlns="http://www.nativescript.org/tns.xsd"
        xmlns:drawer="nativescript-telerik-ui-pro/sidedrawer"
        id="filter-options-drawer"
        drawerLocation="Bottom"
        loaded="drawerLoaded"
        drawerClosed="drawerClosed"
        ios:drawerContentSize="160"
        android:drawerContentSize="160">
    <drawer:RadSideDrawer.drawerContent>
        <DockLayout class="filter-option-background">
            <StackLayout class="filter-option-stack" height="350">
                <Button text="签收类型" class="filter-option-menu"/>
                <Label class="filter-line"/>
                <Button text="正常签收" class="filter-option-item" tap="filterOptionTap"/>
                <Label class="filter-line"/>
                <Button text="异常签收" class="filter-option-item" verticalAlignment="top" tap="filterOptionTap"/>
                <Label class="filter-line"/>
                <Button text="取消" class="filter-option-item" tap="filterCancelTap"/>
                <Label class="filter-line"/>
            </StackLayout>
        </DockLayout>
    </drawer:RadSideDrawer.drawerContent>
</drawer:RadSideDrawer>
