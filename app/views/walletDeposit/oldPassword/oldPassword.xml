<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" loaded="loaded">
    <Page.actionBar >
        <Android>
            <ActionBar class="actionBar-view">
                <GridLayout columns="*,*,*" rows="auto" verticalAlignment="top">
                    <StackLayout orientation="horizontal" row="0" col="0" colSpan="2"
                                 tap="onBackTap">
                        <Image src="res://btn_nav_back_click" class="bar-image"/>
                        <Label text="返回" style="font-size: 16;color:rgb(255,138,37);margin-top:1px" />

                    </StackLayout>
                    <StackLayout orientation="horizontal" horizontalAlignment="center"
                                 verticalAlignment="center" row="0" col="1" >
                        <Label text="确认支付密码" style="color:black;font-size: 18px; "/>
                    </StackLayout>
                    <StackLayout orientation="horizontal" horizontalAlignment="right"
                                 verticalAlignment="center" row="0" col="2" >

                    </StackLayout>
                </GridLayout>
            </ActionBar>
        </Android>
        <ios>
        <ActionBar title="确认支付密码" class="iosActionBar">
            <NavigationButton text=""/>
            <!--<ActionItem ios.position="left">-->
                <!--<ActionItem.actionView>-->
                    <!--<StackLayout orientation="horizontal" tap="onNavBtnTap">-->
                        <!--<label text="取消" color="rgb(255,135,0)" verticalAlignment="center"></label>-->
                    <!--</StackLayout>-->
                <!--</ActionItem.actionView>-->
            <!--</ActionItem>-->
        </ActionBar>
        </ios>
    </Page.actionBar>

    <StackLayout class="page">
        <StackLayout class="lines">
        </StackLayout>
    <StackLayout orientation="vertical" class="content" >
        <TextField id="input" width="0" text="{{textFieldInput}}" keyboardType="phone" autocorrect="false" returnKeyType="none" ></TextField>

        <label text="请输入原来的支付密码" row="0" col="0" android:style="font-size:15px" ></label>

        <StackLayout orientation="horizontal" horizontalAlignment="center" class="content-label">
            <TextField id="firstTextField"  secure="true" autocorrect="false" returnKeyType="none"  android:isEnabled='false' android:height="50" ios:editable='False' style="font-size:20px;"></TextField>
            <TextField id="secondTextField" secure="true" autocorrect="false" returnKeyType="none"  android:isEnabled='false' android:height="50" ios:editable='False' style="font-size:20px;"></TextField>
            <TextField id="thirdTextField"  secure="true" autocorrect="false" returnKeyType="none"  android:isEnabled='false' android:height="50" ios:editable='False' style="font-size:20px;"></TextField>
            <TextField id="fourthTextField" secure="true" autocorrect="false" returnKeyType="none"  android:isEnabled='false' android:height="50" ios:editable='False' style="font-size:20px;"></TextField>
            <TextField id="fifthTextField"  secure="true" autocorrect="false" returnKeyType="none"  android:isEnabled='false' android:height="50" ios:editable='False' style="font-size:20px;"></TextField>
            <TextField id="sixthTextField"  secure="true" autocorrect="false" returnKeyType="none"  android:isEnabled='false' android:height="50" ios:editable='False' style="font-size:20px;"></TextField>
        </StackLayout>

        <button text="确定" tap="jumpConfirmPassword"></button>
    </StackLayout>
    </StackLayout>

</Page>