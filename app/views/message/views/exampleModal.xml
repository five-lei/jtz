<Page xmlns="http://www.nativescript.org/tns.xsd"
    shownModally="onShownModally"
    style="border-radius:5px; border-width: 1px; border-color:white;">

    <GridLayout rows="auto" columns="*" id="mdlItemsSelect" >
        <StackLayout>
            <Label text="请输入运单号" style="padding-top: 25; font-size: 18;  color: orange; text-align: center; margin-bottom: 20; width: 100%;" />

            <GridLayout rows="auto" columns="*, auto"  style="padding-left: 15; padding-right: 15; font-size: 16;">
                <StackLayout>
                    <TextField style="background-color:#eeeeee;border-radius: 2;margin:5;font-size: 14;"
                               col="1" row="0"
                               hint="请输入" 
                               id="textfield"
                               maxLength="2"/>
                    
                </StackLayout>

                
            </GridLayout>

            <GridLayout columns="*,*" rows="auto" style="margin-top: 25; margin-bottom: 15; margin-right: 10; margin-left:10;">
                <Button text="确认" tap="saveModal" col="0"
                 style=" background-color:rgb(255,138,37); border-radius:2px;border-color:rgb(255,138,37);border-width: 1px;font-size: 18;color: white; padding: 10;margin-right:5"/>
                 <Button text="取消" tap="closeModal" col="1"
                 style=" background-color:#eeeeee; border-radius:2px;border-color:#eeeeee;border-width: 1px;font-size: 18;color: white; padding: 10;margin-left:5"/>
            </GridLayout>
        </StackLayout>
    </GridLayout>

</Page>