<Page xmlns="http://www.nativescript.org/tns.xsd"
    shownModally="onShownModally"
    style="border-radius:5px; border-width: 1px; border-color:white;color:#333">

    <GridLayout rows="auto" columns="*" id="mdlItemsSelect" >
        <StackLayout>
            <Label text="请输入原因" style="padding-top: 25; font-size: 18;  color: orange; text-align: center; margin-bottom: 20; width: 100%;" />

            <TextView id="cancel-reason-textview" hint="请输入原因" class="text-input" textWrap="true"/>
            <GridLayout columns="*,*" rows="auto" style="margin-top: 25; margin-bottom: 15; margin-right: 10; margin-left:10;">
                <Button text="确定" tap="confirm" row="0" col="0"
                            style=" background-color:rgb(255,138,37); border-color:rgb(255,138,37);border-width: 1px;font-size: 18;color: white; padding: 10;"/>
                <Button text="取消" tap="reject"  row="0" col="1"
                            style=" background-color:rgb(255,255,255); border-color:rgb(255,138,37);border-width: 1px;font-size: 18;color: #333; padding: 10;"/>
            </GridLayout>
        </StackLayout>
    </GridLayout>

</Page>